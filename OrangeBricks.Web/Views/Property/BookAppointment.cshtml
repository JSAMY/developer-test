@model OrangeBricks.Web.Controllers.Property.ViewModels.BookAppointmentViewModel

@{
    ViewBag.Title = "Book Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book Aappointment</h2>

<p>Please choose a convenient date to view the property  :  @Model.StreetName</p>

@using (Html.BeginForm("BookAppointment", "Property", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <div class="container">
        <div class="row">

            <div class='col-sm-2'>
                <div class="form-group">
                    <div class='input-group date' id='apt_dt'>
                        @Html.EditorFor(model => model.AppointmentDateTime,  new { htmlAttributes = new { @class = "form-control apt_date", @Value = Model.AppointmentDateTime.ToString("dd/MM/yyyy hh:mm") } })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-sm-1">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Book Appointment" />
                    </div>
                </div>

            </div>

            @Html.HiddenFor(m => m.PropertyId)
        </div>
        

    </div>

}


